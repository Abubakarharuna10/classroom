<div class="clearfix classroom-list-item">
  <div class="float-left mr-2">
    <%= image_tag classroom.github_organization.github_avatar_url(120), class: 'avatar left', height: 60, width: 60, alt: "@#{classroom.github_organization.login}" %>
  </div>
  <div class="float-right pt-2">
    <span class="p-1 classroom-stat-item text-gray tooltipped tooltipped-s" aria-label="<%= t('views.classrooms.individual_assignments') %>">
      <%= octicon 'person', :class => "mr-1" %><%= classroom.assignments.count %>
    </span>

    <span class="p-1 classroom-stat-item text-gray tooltipped tooltipped-s" aria-label="<%= t('views.classrooms.group_assignments') %>">
      <%= octicon 'organization', :class => "mr-1" %><%= classroom.group_assignments.count %>
    </span>
  </div>
  <div class="overflow-hidden d-flex flex-column ">
    <%= link_to classroom, class: 'classroom-title' do %>
      <strong class="f4 css-truncate-target"><%= classroom.title %></strong>
    <% end %>

    <span class="f4 text-gray css-truncate-target">@<%= classroom.github_organization.login %></span>
  </div>
</div>
