<% classroom = @classroom || current_classroom %>

<% content_for :classroom_banner do %>
  <div class="classroom-banner" style="background-image: <%= classroom.github_organization.geo_pattern_data_uri %>">
    <div class="container-lg">
      <%= link_to t('views.classrooms.manage_classroom'), edit_classroom_path(classroom), class: 'btn btn-primary' %>
      <h1 class="classroom-name"><%= link_to classroom.title, classroom %></h1>
      <p class="classroom-login"><%= link_to "#{classroom.github_organization.login}", classroom.github_organization.html_url %></p>
    </div>
  </div>
<% end %>
