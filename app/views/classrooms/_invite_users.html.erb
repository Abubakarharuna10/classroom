<div class="site-content">
  <div class="site-content-cap">
    <h2 class="site-content-heading"><%= t('views.classrooms.invite_administrator') %></h2>
  </div>

  <div class="site-content-body markdown-body">
    <h3><%= t('views.classrooms.add_to_organization') %></h3>
    <p><strong><%= t('views.classrooms.must_add_as_owner') %></strong></p>
    <p><%= t('views.classrooms.link_to_add_owner', href: link_to(current_classroom.github_organization.team_invitations_url, current_classroom.github_organization.team_invitations_url)).html_safe %></p>

    <h3><%= t('views.classrooms.give_this_link') %></h3>
    <p><%= t('views.classrooms.give_this_link_desc') %></p>
    <%= link_to classroom_url(current_classroom), classroom_url(current_classroom), class: 'mobile-invitation-content' %>

    <div class="columns desktop-invitation-content">
      <div class="two-thirds">
        <div class="input-group">
          <%= content_tag :input, '', type: 'text', class: "form-control input-contrast", id: "classroom-#{current_classroom.github_id}", value: classroom_url(current_classroom), readonly: 'readonly' %>
          <span class="input-group-button">
            <button aria-label="<%= t('views.classrooms.copy_to_clipboard') %>" data-clipboard-target=<%= "#classroom-#{current_classroom.github_id}" %> class="js-clipboard btn tooltipped tooltipped-s" data-copied-hint="<%= t('views.classrooms.copied') %>" type="button">
              <%= octicon 'clippy' %>
              <%= t('views.classrooms.copy_classroom_link') %>
            </button>
          </span>
        </div>
      </div>
    </div>

    <% if action_name == 'invite' %>
      <div class="form-actions">
        <% path = student_identifier_enabled? ? new_roster_path(current_classroom) : classroom_path(current_classroom) %>
        <%= link_to t('views.classrooms.continue'), path, class: 'btn btn-primary right' %>
      </div>
    <% end %>
  </div>
</div>
