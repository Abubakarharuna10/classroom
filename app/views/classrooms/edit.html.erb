<div class="remodal-bg">
  <%= render 'classrooms/classroom_banner' %>

  <div class="columns">
    <div class="one-fourth column">
      <%= render partial: 'classrooms/side_menu' %>
    </div>
    <div class="three-fourths column">

      <div class="boxed-group">
        <h3><%= t('views.classrooms.profile_information') %></h3>
        <div class="boxed-group-inner clearfix">
          <%= form_for current_classroom do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <dl class="form">
              <dt><%= f.label :title %></dt>
              <dd><%= f.text_field :title, class: 'textfield form-control input-contrast input-block' %></dd>
            </dl>
            <div class="form-actions">
              <%= f.submit t('views.classrooms.save_changes'), class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="boxed-group dangerzone">
        <h3><%= t('views.classrooms.delete_submit') %></h3>
        <div class="boxed-group-inner pt-2 clearfix">
          <p><%= t('views.classrooms.theres_no_going_back') %></p>
          <p>
            <a data-remodal-target="reset-and-remove-classroom" class="btn btn-danger"><%= t('views.classrooms.delete_submit') %></a>
          </p>
        </div>
      </div>

    </div>
  </div>


  <%= render partial: 'classrooms/reset_and_remove_classroom_modal' %>
</div>
