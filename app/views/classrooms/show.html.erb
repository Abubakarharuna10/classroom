<%= render 'classrooms/classroom_banner' %>

<div class="site-content">

  <div class="site-content-cap container-lg clearfix">
      <h2 class="col-6 float-left text-left pr-2 site-content-heading">Assignments</h2>

        <div class="col-6 float-right text-right pl-2">
          <% if @assignments.present? %>
            <%= link_to t('views.classrooms.new_assignment'), new_assignment_classroom_path(current_classroom), class: 'btn btn-primary right', role: 'button'%>
          <% end %>
        </div>
  </div>


  <div class="site-content-body assignment-list-items">
    <% if @assignments.present? %>
      <%= render @assignments %>
      <%= render partial: 'shared/pagination', locals: { collection: @assignments } %>
    <% else %>
      <div class="blankslate blankslate-spacious blankslate-clean-background">
        <h3><%= t('views.classrooms.no_assignments') %></h3>
        <%= link_to new_assignment_classroom_path(current_classroom), class: 'btn btn-large btn-primary f3 mt-3', role: 'button' do %>
          <%= t('views.classrooms.create_first_assignment') %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
